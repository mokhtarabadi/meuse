# Environment variables for Meuse Docker deployment
# Copy this file to .env and customize values

#---------------------
# Domain and URLs
#---------------------
DOMAIN=localhost
REGISTRY_URL=http://localhost:8855
CARGO_API_URL=http://localhost:8855/api/v1/crates

#---------------------
# PostgreSQL settings
#---------------------
POSTGRES_DB=meuse
POSTGRES_USER=meuse
POSTGRES_PASSWORD=meuse_production_password_2024
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_POOL_SIZE=10

#---------------------
# Git HTTP server settings
#---------------------
GIT_USER=gituser
GIT_PASSWORD=ChangeMeStrongPassword
GIT_PORT=8180

#---------------------
# Meuse application settings
#---------------------
MEUSE_PORT=8855
MEUSE_LOG_LEVEL=info
MEUSE_JAVA_OPTS=-Xmx512m

#---------------------
# Git index configuration
#---------------------
# Meuse requires a non-bare git repository for the index.
# Do NOT use a .git suffix or initialize with 'git init --bare'. See docs for details.
GIT_INDEX_PATH=/app/git-data/myindex
GIT_TARGET=master
GIT_INDEX_URL=http://git-server/myindex

#---------------------
# Crate storage
#---------------------
CRATES_PATH=/app/crates

#---------------------
# Frontend settings
#---------------------
FRONTEND_ENABLED=true
FRONTEND_PUBLIC=true
FRONTEND_SECRET=32characterstringrandomlygeneratedhere

#---------------------
# Initial users
#---------------------
ADMIN_USER=admin
ADMIN_PASSWORD=admin_production_password_2024
TECH_USER=tech_user
TECH_PASSWORD=tech_production_password_2024
READ_USER=reader
READ_PASSWORD=reader_production_password_2024

#---------------------
# Optional: S3 storage (if using S3 instead of filesystem)
#---------------------
# S3_ACCESS_KEY=your_s3_access_key
# S3_SECRET_KEY=your_s3_secret_key
# S3_ENDPOINT=s3.amazonaws.com
# S3_BUCKET=your-meuse-bucket
